<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn">
    <extensions>
        <add assembly="NLog.Targets.ElasticSearch" />
        <add assembly="NLog.Web.AspNetCore"/>
    </extensions>
    <targets>
        <target name="elastic" xsi:type="AsyncWrapper">
            <target xsi:type="ElasticSearch" index="gitlab-bot-${date:format=yyyy-MM}" layout="${message}  ${exception:format=tostring}" uri="http://192.168.1.202:9200">
                <field name="logger" layout="${logger}"/>
            </target>
        </target>
    </targets>
    <rules>
        <logger name="*" minlevel="Trace" writeTo="file, elastic" />
    </rules>
</nlog>